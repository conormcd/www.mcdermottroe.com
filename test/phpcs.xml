<?xml version="1.0"?>
<ruleset name="McDermottroe_com">
    <description>Style checks for www.mcdermottroe.com</description>

    <rule ref="Generic">
        <exclude name="Generic.Files.EndFileNoNewline" />
        <exclude name="Generic.Files.LowercasedFilename.NotFound" />
        <exclude name="Generic.Files.OneClassPerFile" />
        <exclude name="Generic.Formatting.MultipleStatementAlignment.NotSameWarning" />
        <exclude name="Generic.Formatting.SpaceAfterCast" />
        <exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman" />
        <exclude name="Generic.PHP.UpperCaseConstant" />
        <exclude name="Generic.WhiteSpace.DisallowSpaceIndent" />
    </rule>
    <rule ref="PEAR">
        <exclude name="PEAR.Classes.ClassDeclaration.OpenBraceNewLine" />
        <exclude name="PEAR.Commenting.ClassComment.MissingTag" />
        <exclude name="PEAR.Commenting.FileComment" />
        <exclude name="PEAR.Functions.FunctionDeclaration.BraceOnSameLine" />
        <exclude name="PEAR.NamingConventions.ValidFunctionName.PrivateNoUnderscore" />
        <exclude name="PEAR.NamingConventions.ValidFunctionName.PublicUnderscore" />
        <exclude name="PEAR.NamingConventions.ValidVariableName.PublicUnderscore" />
        <exclude name="PEAR.WhiteSpace.ScopeIndent.Incorrect" />
    </rule>
    <rule ref="Generic.NamingConventions.CamelCapsFunctionName">
        <properties>
            <property name="strict" value="false" />
        </properties>
    </rule>
    
    <include name="Generic.PHP.LowerCaseConstant" />
    <include name="Generic.Functions.OpeningFunctionBraceKernighanRitchie" />
    <include name="Generic.WhiteSpace.DisallowTabIndent" />
</ruleset>
