<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns="http://phpdox.net/config" silent="false">
    <project name="www.mcdermottroe.com" source="${basedir}/.." workdir="${basedir}/xml">
        <collector publiconly="false" backend="parser">
            <exclude mask="*/vendor/*" />

            <inheritance resolve="true" />
        </collector>

        <generator output="${basedir}">
            <enrich base="${basedir}">
                <source type="build" />
                <source type="checkstyle">
                    <file name="phpcs.xml" />
                </source>
                <source type="git" />
                <source type="phploc" />
                <source type="pmd">
                    <file name="phpmd.xml" />
                </source>
                <source type="phpunit">
                    <coverage path="phpunit-coverage" />
                </source>
            </enrich>

            <build engine="html" enabled="true" output="html">
                <template dir="${phpDox.home}/templates/html" />
                <file extension="xhtml" />
            </build>
        </generator>
    </project>
</phpdox>
